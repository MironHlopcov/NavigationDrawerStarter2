<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sum_TextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <Linearlayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/sum_TextView"
        android:layout_toLeftOf="@id/data_TextView">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/deskription_TextView"
            android:text="12341234123qwerqwerqwer41234123412341234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00A14B"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:inputType="text"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mcc_code_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deskription_TextView"
            android:textColor="#00A14B"
            android:ellipsize="end"
            android:maxLines="1"/>
    </Linearlayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/data_TextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd = "true"
        android:textColor="#7F3F97"
        android:ellipsize="end"
        android:maxLines="1"/>
</RelativeLayout>